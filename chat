    }
    #loginDiv, #chatDiv {
      padding: 20px;
      display: none;
    }
    input {
      width: 100%;
      padding: 10px;
      margin: 8px 0;
      border: 1px solid #ccc;
      border-radius: 8px;
    }
    button {
      width: 100%;
      padding: 10px;
      background: #4a69bd;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      margin-top: 10px;
    }
    button:hover { background: #3b5399; }
    #messages {
      height: 300px;
      overflow-y: auto;
      padding: 10px;
